<?xml version="1.0" encoding="UTF-8"?>
<phpunit xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:noNamespaceSchemaLocation="./vendor/phpunit/phpunit/phpunit.xsd"
         bootstrap="vendor/autoload.php"
         colors="true"
>
    <testsuites>
        <testsuite name="KV and Queues Test Suite">
            <file>./tests/KVTest.php</file>
            <file>./tests/QueuesTest.php</file>
        </testsuite>
    </testsuites>
    <php>
        <env name="APP_ENV" value="testing"/>
        <env name="CLOUDFLARE_TOKEN" value="test-token"/>
        <env name="CLOUDFLARE_ACCOUNT_ID" value="test-account-id"/>
        <env name="CLOUDFLARE_KV_NAMESPACE" value="test-namespace"/>
        <env name="CLOUDFLARE_QUEUE_NAME" value="test-queue"/>
    </php>
</phpunit>
